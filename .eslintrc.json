{
  "env": {
    "browser": true,
    "greasemonkey": true,
    "es6": true
  },
  "globals": {
    "WeakRef": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "extends": "eslint:all",
  "rules": {
    // Possible Problems

    // Suggestions
    "capitalized-comments": [
      "error",
      "always",
      {
        "ignoreConsecutiveComments": true
      }
    ],
    "func-names": [
      "error",
      "as-needed"
    ],
    "func-style": [
      "error",
      "declaration",
      {
        "allowArrowFunctions": true
      }
    ],
    "id-length": "off",
    "max-classes-per-file": "off",
    "max-lines": "off",
    "max-statements": [
      "error",
      {
        "max": 20
      },
      {
        "ignoreTopLevelFunctions": true
      }
    ],
    "multiline-comment-style": [
      "error",
      "separate-lines"
    ],
    "no-bitwise": [
      "error",
      {
        "int32Hint": true
      }
    ],
    "no-confusing-arrow": [
      "error",
      {
        "allowParens": true
      }
    ],
    "no-invalid-this": "off",
    "no-magic-numbers": [
      "error",
      {
        "ignore": [
          -1,
          0,
          1
        ],
        "detectObjects": false,
        "enforceConst": false,
        "ignoreArrayIndexes": false
      }
    ],
    "no-ternary": "off",
    "no-underscore-dangle": [  // TODO(#141): Periodically review.
      "error",
      {
        "allow": [
          "_addInfo",
          "_addInfoDialog",
          "_addInfoStyle",
          "_addInfoViewHandlers",
          "_cards",
          "_dull",
          "_errorMarker",
          "_errorPlatformInfo",
          "_errorTab",
          "_errors",
          "_findPages",
          "_info",
          "_infoId",
          "_initializeInfoDialog",
          "_initializeInfoView",
          "_initializeTabUiKeyboard",
          "_installNavStyle",
          "_invites",
          "_jobCards",
          "_jobs",
          "_lastInputElement",
          "_news",
          "_nextPost",
          "_nextTab",
          "_notifications",
          "_onFocus",
          "_pageHeader",
          "_pageInfoId",
          "_parseHeader",
          "_prevPost",
          "_prevTab",
          "_sections",
          "_setKeyboardContext",
          "_shine",
          "_shortcutsTab",
          "_tabUiKeyboard",
          "_togglePost",
          "_updateInfoErrorsLabel"
        ]
      }
    ],
    "no-unused-expressions": "off",
    "no-warning-comments": [
      "error",
      {
        "terms": [
          "do not submit",
          "fixme"
        ]
      }
    ],
    "object-shorthand": [
      "error",
      "never"
    ],
    "one-var": [
      "error",
      "never"
    ],
    "prefer-destructuring": "off",
    "quote-props": [
      "error",
      "consistent-as-needed"
    ],
    "sort-keys": "off",
    "valid-typeof": [
      "error",
      {
        "requireStringLiterals": true
      }
    ],
    "yoda": [
      "error",
      "never",
      {
        "exceptRange": true,
        "onlyEquality": false
      }
    ],

    // Layout & Formatting
    "array-element-newline": [
      "error",
      "consistent"
    ],
    "arrow-parens": [
      "error",
      "as-needed",
      {
        "requireForBlockBody": true
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "dot-location": [
      "error",
      "property"
    ],
    "function-call-argument-newline": [
      "error",
      "consistent"
    ],
    "function-paren-newline": [
      "error",
      "consistent"
    ],
    "indent": [
      "error",
      2
    ],
    "lines-between-class-members": [
      "error",
      "always",
      {
        "exceptAfterSingleLine": true
      }
    ],
    "max-len": [
      "error",
      {
        "code": 78,
        "ignorePattern": "eslint-disable-line",
        "ignoreUrls": true
      }
    ],
    "multiline-ternary": [
      "error",
      "always-multiline"
    ],
    "no-extra-parens": [
      "error",
      "all",
      {
        "nestedBinaryExpressions": false,
        "enforceForArrowConditionals": false
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxBOF": 0,
        "maxEOF": 0
      }
    ],
    "no-multi-spaces": [
      "error",
      {
        "ignoreEOLComments": true
      }
    ],
    "object-property-newline": [
      "error",
      {
        "allowAllPropertiesOnSameLine": true,
        "allowMultiplePropertiesPerLine": false
      }
    ],
    "padded-blocks": [
      "error",
      {
        "classes": "always"
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "space-before-function-paren": [
      "error",
      {
        "named": "never",
        "asyncArrow": "always"
      }
    ],

    // Deprecated
    "require-jsdoc": [
      "error",
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true,
          "ArrowFunctionExpression": true,
          "FunctionExpression": true
        }
      }
    ],
    "valid-jsdoc": [
      "error",
      {
        "prefer": {
          "arg": "param",
          "argument": "param",
          "return": "returns",
          "virtual": "abstract"
        },
        "preferType": {
          "Boolean": "boolean",
          "Number": "number",
          "Object": "error",
          "String": "string"
        },
        "requireReturn": false,
        "requireParamDescription": true,
        "requireReturnDescription": true,
        "requireReturnType": true,
        "requireParamType": true
      }
    ]
  }
}
