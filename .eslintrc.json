{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": "eslint:all",
  "rules": {
    // Possible Problems
    "array-callback-return": "error",
    "no-self-compare": "error",
    "no-template-curly-in-string": "error",
    "no-unmodified-loop-condition": "error",
    "no-use-before-define": "error",
    // Suggestions
    "arrow-body-style": ["error"],
    "camelcase": "error",
    "capitalized-comments": ["error", "always", {"ignoreConsecutiveComments": true}],
    "class-methods-use-this": "error",
    "consistent-return": "error",
    "curly": "error",
    "func-names": ["error", "as-needed"],
    "func-style": ["error", "declaration", {"allowArrowFunctions": true}],
    "id-length": "off",
    "max-classes-per-file": "off",
    "max-depth": "error",
    "max-lines": "off",
    "max-lines-per-function": "error",
    "max-params": "error",
    "max-statements": ["error", {"max": 20}, {"ignoreTopLevelFunctions": true}],
    "multiline-comment-style": ["error", "separate-lines"],
    "no-alert": "error",
    "no-bitwise": ["error", {"int32Hint": true}],
    "no-confusing-arrow": ["error", {"allowParens": true}],
    "no-else-return": "error",
    "no-empty-function": "error",
    "no-invalid-this": "off",
    "no-magic-numbers": ["error", {"ignore": [-1, 0, 1]}],
    "no-nested-ternary": "error",
    "no-param-reassign": "error",
    "no-plusplus": "error",
    "no-shadow": "error",
    "no-ternary": "off",
    "no-underscore-dangle": "off",  // TODO(#68): After Debian upgrade
    "no-unneeded-ternary": "error",
    "no-unused-expressions": "off",  // TODO(#68): After Debian upgrade
    "no-warning-comments": ["error", {"terms": ["do not submit", "fixme"]}],
    "object-shorthand": ["error", "never"],
    "one-var": ["error", "never"],
    "prefer-destructuring": ["off", {"object": true}, {"enforceForRenamedProperties": true}],  // TODO(#113): incrementally
    "prefer-named-capture-group": "error",
    "prefer-promise-reject-errors": "error",
    "quote-props": ["error", "consistent-as-needed"],
    "require-unicode-regexp": "off",  // TODO(#68): investigate
    "sort-keys": "off",  // TODO(#68): investigate
    "strict": "off",  // TODO(#68): investigate
    "valid-typeof": ["error", {"requireStringLiterals": true}],
    "yoda": "off",  // TODO(#68): investigate
    // Layout & Formatting
    "array-element-newline": "off",  // TODO(#69): investigate
    "arrow-parens": "off",  // TODO(#69): investigate
    "comma-dangle": "off",  // TODO(#69): investigate
    "dot-location": "off",  // TODO(#69): investigate
    "function-paren-newline": "off",  // TODO(#69): investigate
    "indent": "off",  // TODO(#69): investigate
    "lines-between-class-members": "off",  // TODO(#69): investigate
    "max-len": "off",  // TODO(#69): investigate
    "multiline-ternary": "off",  // TODO(#69): investigate
    "newline-per-chained-call": "off",  // TODO(#69): investigate
    "no-extra-parens": "off",  // TODO(#69): investigate
    "no-multi-spaces": "off",  // TODO(#69): investigate
    "object-property-newline": "off",  // TODO(#69): investigate
    "padded-blocks": "off",  // TODO(#69): investigate
    "quotes": "off",  // TODO(#69): investigate
    "semi": "off",  // TODO(#69): investigate
    "space-before-function-paren": "off",  // TODO(#69): investigate
    "wrap-iife": "off",  // TODO(#69): investigate
    // Deprecated
    "require-jsdoc": ["error", {
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": true,
        "ClassDeclaration": true,
        "ArrowFunctionExpression": true,
        "FunctionExpression": true
      }
    }],
    "valid-jsdoc": ["error", {
      "prefer": {
        "arg": "param",
        "argument": "param",
        "return": "returns",
        "virtual": "abstract"
      },
      "preferType": {
        "Boolean": "boolean",
        "Number": "number",
        "Object": "error",
        "String": "string"
      },
      "requireReturn": false
    }]
  }
}
