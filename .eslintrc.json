{
  "env": {
    "browser": true,
    "greasemonkey": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "script"
  },
  "extends": "eslint:all",
  "rules": {
    // Possible Problems
    // Suggestions
    "arrow-body-style": ["error"],
    "capitalized-comments": ["error", "always", {"ignoreConsecutiveComments": true}],
    "func-names": ["error", "as-needed"],
    "func-style": ["error", "declaration", {"allowArrowFunctions": true}],
    "id-length": "off",
    "max-classes-per-file": "off",
    "max-lines": "off",
    "max-statements": ["error", {"max": 20}, {"ignoreTopLevelFunctions": true}],
    "multiline-comment-style": ["error", "separate-lines"],
    "no-bitwise": ["error", {"int32Hint": true}],
    "no-confusing-arrow": ["error", {"allowParens": true}],
    "no-invalid-this": "off",
    "no-magic-numbers": ["error", {"ignore": [-1, 0, 1]}],
    "no-ternary": "off",
    "no-underscore-dangle": "off",  // TODO(#68): After Debian upgrade
    "no-unused-expressions": "off",  // TODO(#68): After Debian upgrade
    "no-warning-comments": ["error", {"terms": ["do not submit", "fixme"]}],
    "object-shorthand": ["error", "never"],
    "one-var": ["error", "never"],
    "prefer-destructuring": ["off", {"object": true}, {"enforceForRenamedProperties": true}],  // TODO(#113): incrementally
    "quote-props": ["error", "consistent-as-needed"],
    "sort-keys": "off",
    "valid-typeof": ["error", {"requireStringLiterals": true}],
    "yoda": ["error", "never", {"exceptRange": true}],
    // Layout & Formatting
    "array-element-newline": ["error", "consistent"],
    "arrow-parens": ["error", "as-needed", {"requireForBlockBody": true}],
    "comma-dangle": ["error", "always-multiline"],
    "dot-location": ["error", "property"],
    "function-paren-newline": "error",
    "indent": ["error", 2],
    "lines-between-class-members": ["error", "always", {"exceptAfterSingleLine": true}],
    "max-len": ["off", {"ignoreUrls": true}],  // TODO(#97): Revisit after.
    "multiline-ternary": ["error", "always-multiline"],
    "newline-per-chained-call": "error",
    "no-extra-parens": ["error", "all", {"nestedBinaryExpressions": false, "enforceForArrowConditionals": false}],
    "no-multi-spaces": "off",  // TODO(#69): investigate
    "object-property-newline": "off",  // TODO(#69): investigate
    "padded-blocks": "off",  // TODO(#69): investigate
    "quotes": "off",  // TODO(#69): investigate
    "semi": "off",  // TODO(#69): investigate
    "space-before-function-paren": "off",  // TODO(#69): investigate
    "wrap-iife": "off",  // TODO(#69): investigate
    // Deprecated
    "require-jsdoc": ["error", {
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": true,
        "ClassDeclaration": true,
        "ArrowFunctionExpression": true,
        "FunctionExpression": true
      }
    }],
    "valid-jsdoc": ["error", {
      "prefer": {
        "arg": "param",
        "argument": "param",
        "return": "returns",
        "virtual": "abstract"
      },
      "preferType": {
        "Boolean": "boolean",
        "Number": "number",
        "Object": "error",
        "String": "string"
      },
      "requireReturn": false
    }]
  }
}
